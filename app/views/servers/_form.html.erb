<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= simple_form_for(@server) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :ip %>
        </div>

        <div class="form-actions">
          <%= f.submit :class => "btn btn-primary" %>
        </div>
      <% end %>

    </div>
  </div>
</section> 